{
  "name": "meditate",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && run-p build:*",
    "build:robots": "touch dist/robots.txt",
    "build:webpack": "NODE_ENV=production webpack",
    "format": "yarn test:lint:css --fix && yarn test:lint:ts --fix && prettier --write '**/*'",
    "icons": "node scripts/icons",
    "start": "webpack-dev-server --hot --open",
    "test": "run-p test:*",
    "test:audit": "yarn audit --level high || [ $? -lt 8 ]",
    "test:lint": "run-p test:lint:*",
    "test:lint:css": "stylelint src/**/*.css",
    "test:lint:ts": "eslint --ext js,ts .",
    "test:format": "prettier --check '**/*'",
    "test:types": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benji6/meditate.git"
  },
  "author": "Ben Hall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benji6/meditate/issues"
  },
  "homepage": "https://github.com/benji6/meditate#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "favicons": "^5.1.1",
    "html-minifier": "^4.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.13.5",
    "style-loader": "^1.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "terser-webpack-plugin": "^2.2.1",
    "typescript": "^3.6.3",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "eri": "12.4.4",
    "nosleep.js": "^0.9.0",
    "offline-plugin": "^5.0.2"
  }
